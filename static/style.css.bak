body {
    background-color: #f0f6ff;
    font-family: Arial, sans-serif;
    color: #222;
}

.container {
    max-width: 500px;
    margin: auto;
    padding: 20px;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 0 15px rgba(0,0,0,0.1);
}

h2 {
    text-align: center;
    color: #3b82f6;
}

.subtitle {
    text-align: center;
    color: #555;
    margin-bottom: 20px;
}

label {
    display: block;
    margin-top: 15px;
    color: #333;
}

input[type="text"],
input[type="number"],
input[type="file"] {
    width: 100%;
    padding: 10px;
    margin-top: 5px;
    border: 1px solid #ccc;
    border-radius: 8px;
}

.button-group {
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
}

.start-btn, .stop-btn {
    padding: 10px 15px;
    border: none;
    border-radius: 8px;
    font-weight: bold;
    cursor: pointer;
    width: 48%;
    transition: 0.3s;
}

.start-btn {
    background-color: #3b82f6;
    color: #fff;
}

.start-btn:hover {
    background-color: #2563eb;
}

.stop-btn {
    background-color: #ef4444;
    color: #fff;
}

.stop-btn:hover {
    background-color: #dc2626;
}

.status-box, .logs {
    margin-top: 25px;
    background: #e0ecff;
    padding: 15px;
    border-radius: 10px;
}